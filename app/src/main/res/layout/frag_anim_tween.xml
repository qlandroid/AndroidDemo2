<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/anim_tween_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startAnim" />

        <ImageView
            android:id="@+id/anim_tween_iv0"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/hudie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用自定义Animation" />

        <TextView
            android:id="@+id/anim_tween_tv_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c啊撒旦法撒旦法说的发生的发生的发生的发生的发生地方啊撒旦法撒旦法说的发生的发生地方啊撒旦法撒旦法手动阀啥地方" />

        <TextView
            android:selectAllOnFocus="true"
            android:textIsSelectable="true"
            android:id="@+id/anim_tween_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>
</ScrollView>
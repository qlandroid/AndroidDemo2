<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="TextView的详细属性"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_view_details_iv0"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv1"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv2"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv4"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv5"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/text_view_details_iv6"
                android:layout_width="150dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/text_view_details_photoV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>